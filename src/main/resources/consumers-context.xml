<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="it.claudiostarnoni.util.activeMqProber.bean.*"/>

    <context:property-placeholder location="classpath:application.properties" ignore-unresolvable="true" order="1"/>
    <context:property-placeholder location="classpath:consumer.properties" ignore-unresolvable="true" order="2"/>


    <camelContext id="consumerContext" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="properties" location="application.properties"/>
        <endpoint uri="activemq:queue:{{test.queue.name}}" id="testQueueEndpoint"/>
        <route id="deque">
            <from ref="testQueueEndpoint"/>
            <to uri="bean:receiverBean"/>
        </route>
    </camelContext>

    <bean id="receiverBean"
          class="it.claudiostarnoni.util.activeMqProber.bean.FileWriter"/>

    <bean id="jmsConnectionFactory"
          class="org.apache.activemq.ActiveMQConnectionFactory"
          p:brokerURL="tcp://${activeMqBroker.host}:61616"/>

    <bean id="consumerPooledConnectionFactory"
          class="org.apache.activemq.pool.PooledConnectionFactory"
          init-method="start"
          destroy-method="stop"
          p:maxConnections="${max.jms.conn}"
          p:connectionFactory-ref="jmsConnectionFactory"/>


    <bean id="jmsConfigConsumer"
          class="org.apache.camel.component.jms.JmsConfiguration"
          p:connectionFactory-ref="consumerPooledConnectionFactory"
          p:concurrentConsumers="${max.jms.concurrent.client}"/>

    <bean id="activemqConsumer"
          class="org.apache.activemq.camel.component.ActiveMQComponent"
          p:configuration-ref="jmsConfigConsumer"/>

</beans>